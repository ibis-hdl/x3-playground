    "testPresets": [
        {
            "name": "test-default",
            "hidden": true,
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "error",
                "stopOnFailure": false
            }
        },
        {
            "name": "test-libc++-asan",
            "hidden": true,
            "description": "disabled ASAN's alloc-dealloc-mismatch, as it only serves as a compiler target for macOS and this error only occurs in the unusual constellation of Ubuntu and Clang/libc++.",
            "environment": {
                "ASAN_OPTIONS": "alloc_dealloc_mismatch=0"
            }
        },
