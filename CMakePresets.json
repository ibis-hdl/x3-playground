{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "use-ninja",
            "description": "Default build tool",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "default-dirs",
            "description": "Default build and install directories",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/build/${presetName}/install"
            }
        },
        {
            "name": "default-env",
            "description": "Default environment variables for the CMake process",
            "hidden": true,
            "environment": {
                "CONAN_V2_MODE": "1"
            }
        },
        {
            "name": "default-presets",
            "description": "Common settings for all presets",
            "hidden": true,
            "inherits": [
                "use-ninja",
                "default-dirs",
                "default-env"
            ]
        },
        {
            "name": "use-stdlib-libc++",
            "description": "Enforce to compile and link with libc++",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_FLAGS": "-stdlib=libc++",
                "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++",
                "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++"
            }
        },
        {
            "name": "debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "release-with-debug-build",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "clang-tidy",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_CXX_CLANG_TIDY": "clang-tidy"
            }
        },
        {
            "name": "compiler-clang",
            "description": "Clang C language family frontend for LLVM",
            "hidden": true,
            "cacheVariables": {
                "CXX": "clang++",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "compiler-clang-13",
            "description": "Clang 13 C language family frontend for LLVM",
            "hidden": true,
            "cacheVariables": {
                "CXX": "clang++-13",
                "CMAKE_CXX_COMPILER": "clang++-13"
            }
        },
        {
            "name": "compiler-gcc",
            "description": "GNU Compiler Collection (GCC)",
            "hidden": true,
            "cacheVariables": {
                "CXX": "g++",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "compiler-msvc",
            "description": "Microsoft Visual Studio C++ compiler",
            "hidden": true,
            "cacheVariables": {
                "CXX": "cl",
                "CMAKE_CXX_COMPILER": "cl"
            }
        },
        {
            "name": "compiler-msvc-clang",
            "description": "Microsoft Visual Studio bundled Clang-Cl",
            "hidden": true,
            "cacheVariables": {
                "CXX": "clang-cl",
                "CMAKE_CXX_COMPILER": "clang-cl"
            }
        },
        {
            "name": "linux-default",
            "description": "Linux common settings",
            "hidden": true,
            "inherits": [
                "default-presets"
            ],
            "vendor": {
                "microsoft.com/VisualStudioSettings/CMake/1.0": {
                    "hostOS": [
                        "Linux"
                    ]
                },
                "microsoft.com/VisualStudioRemoteSettings/CMake/1.0": {}
            }
        },
        {
            "name": "linux-clang-debug",
            "displayName": "Linux Clang: Debug",
            "description": "Linux/WSL2 LLVM Clang compiler: Debug",
            "inherits": [
                "linux-default",
                "compiler-clang",
                "debug-build"
            ]
        },
        {
            "name": "linux-clang-release",
            "displayName": "Linux Clang: Release",
            "description": "Linux/WSL2 LLVM Clang compiler: Release",
            "inherits": [
                "linux-default",
                "compiler-clang",
                "release-build"
            ]
        },
        {
            "name": "linux-clang-libc++-debug",
            "displayName": "Linux Clang (libc++): Debug",
            "description": "Linux/WSL2 LLVM Clang with libc++ compiler: Debug",
            "inherits": [
                "linux-default",
                "compiler-clang",
                "debug-build",
                "use-stdlib-libc++"
            ]
        },
        {
            "name": "linux-clang-13-libc++-debug",
            "displayName": "Linux Clang 13 (libc++): Debug",
            "description": "Linux/WSL2 LLVM Clang with libc++ compiler: Debug",
            "inherits": [
                "linux-default",
                "compiler-clang-13",
                "debug-build",
                "use-stdlib-libc++"
            ]
        },
        {
            "name": "linux-gcc-debug",
            "displayName": "Linux GCC: Debug",
            "description": "Linux/WSL2 GNU C compiler: Debug",
            "inherits": [
                "linux-default",
                "compiler-gcc",
                "debug-build"
            ]
        },
        {
            "name": "linux-gcc-release",
            "displayName": "Linux GCC: Release",
            "description": "Linux/WSL2 GNU C compiler: Release",
            "inherits": [
                "linux-default",
                "compiler-gcc",
                "release-build"
            ]
        },
        {
            "name": "windows-arch-x64",
            "description": "Windows MSVC x64 architecture with special handling of external toolset like ninja",
            "hidden": true,
            "architecture": {
                "value": "x64",
                "strategy": "external"
            },
            "toolset": {
                "value": "host=x64",
                "strategy": "external"
            }
        },
        {
            "name": "windows64-default",
            "description": "Windows common settings",
